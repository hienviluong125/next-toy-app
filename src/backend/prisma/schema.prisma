datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  @@map("properties")
  id              Int     @map("id")               @default(autoincrement()) @id
  address         String  @map("address")
  price           Decimal @map("price")
  apartmentNumber String  @map("apartment_number")
  thumbnail       String  @map("thumbnail")
  status          Boolean @map("status")           @default(true)
}

model User {
  @@map("users")
  id           Int      @map("id")         @default(autoincrement()) @id
  email        String   @map("email")      @unique
  name         String?  @map("name")
  password     String   @map("password")

  refreshToken RefreshToken?
}

model RefreshToken {
  @@map("refresh_tokens")
  id           Int      @map("id")            @default(autoincrement()) @id
  token        String   @map("token") @unique
  userId       Int      @map("user_id")       @unique

  user User @relation(fields: [userId], references: [id])
}
